<main class="auth log-in">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <header>
    <div class="back-arrow">
      <%= link_to go_back_path do %>
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
      <% end %> 
    </div>

    <p>SIGNUP</p>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>

  </header>

  <div class="container">
  
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autocomplete: "name", placeholder: 'name' %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email' %>
    </div>

    <div class="field">
      <%= f.password_field :password,
         autocomplete: "new-password", 
         placeholder: @minimum_password_length ? "(#{@minimum_password_length} characters minimum) password" : 'password' %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'password_confirmation' %>
    </div>

    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
  
  
  </div>

  
<% end %>


