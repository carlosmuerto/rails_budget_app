<main id="<%= dom_id @group %>" class="group-show">
  <div class="new-icon">
    <%= button_to new_group_entity_path(@group), class: "corner-floating-btn" do %>
      <i class="fa fa-plus" aria-hidden="true"></i>
    <% end %>
  </div>

  <h1><%= @group.icon %> <%= @group.name %></h1>

  <div class="container">

    <div class="actions">

      <div class="edit">
        <%= button_to edit_group_path(@group), method: :get do %> 
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        <% end %>
      </div>

      <% if @group.entities.any? %>
        <div class="destroy disable">
          <div class="button_to">
            <button disabled="disabled">
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            </button>
          </div>
        </div>
      <% else %>
        <div class="destroy">
          <%= button_to @group, method: :delete do %>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          <% end %>
        </div>
      <% end %>

      

    </div>
    
    <%= render "group_stats", group: @group %>

    <div class="entities">
      <% @entities.each do |entity| %>
        <%= render "entities/preview", entity: entity %>
      <% end %>
      <%= paginate @entities %>
    </div>
    
  </div>
</main>

