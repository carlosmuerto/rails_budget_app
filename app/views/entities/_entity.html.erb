<div id="<%= dom_id entity %>">
  <p>
    <strong>Name:</strong>
    <%= entity.name %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= entity.amount %>
  </p>

  <p>
    <strong>at:</strong>
    <%= entity.created_at %>
  </p>

  <div>
    <strong>groups count:</strong>
    <%= entity.groups.count %>
    <% entity.groups.each do |group| %>
      <p><%= group.name %></p>
    <% end %>
  </div>

</div>
